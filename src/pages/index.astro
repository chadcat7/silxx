---
import Layout from "../layouts/Layout.astro"
---
<Layout title="Silico Battles">
  <section class="header justify-center z-[] relative items-center flex">
    <img src="./logo.png" class="absolute top-[1rem] h-24 left-[1rem]">
    <header class="flex flex-col items-center justify-center mb-4">
      <h1 class="text-[0.9rem] sm:text-[1.4rem] text-right font-light text-darkfg">TO GLITCH IS A MACHINE, TO ERR A HUMAN</h1>
      <h1 class="text-[6.5rem] sm:text-[10rem] -mb-[2rem] sm:-mb-[3rem] -mt-[1.5rem] text-center leading-0 font-extrabold text-darkfg">SILICO</h1>
      <h1 class="text-[0.9rem] sm:text-[1.4rem] text-right font-light text-darkfg self-end mr-8 sm:mr-4">BATTLES V20.1</h1>
      <div class="flex justify-center items-center gap-4 mt-8">
          <a href="#" class="sm:px-8 px-4 py-4 sm:py-4 rounded-full bg-darksec">REGISTER NOW</a>
          <a href="#" class="sm:px-8 sm:py-4 py-4 px-4 rounded-full bg-darkfg">GET THE BROCHURE</a>
      </div>
    </header>
  </section>
  <div class="about mt-16 p-4">
    <h1 class="heading-primary text-center font-extrabold text-transparent text-5xl bg-clip-text bg-gradient-to-r from-darkpr to-darksec">WE ARE BACK</h1>
    <div class="flex flex-wrap justify-center gap-6 sm:gap-16 mt-16 ">
      <div class="card p-8 rounded-lg bg-darkmbg flex items-center flex-col w-full sm:w-1/3 md:w-1/4">
        <p class="number font-extrabold text-darkfg text-6xl">400+</p> 
        <p class="number font-light text-darkfg text-2xl">Participants</p> 
      </div>
      <div class="card p-8 bg-darkmbg flex items-center flex-col w-full sm:w-1/4 sm:w-1/3 md:w-1/4">
        <p class="number font-extrabold text-darkfg text-6xl">12+</p> 
        <p class="number font-light text-darkfg text-2xl">Events</p> 
      </div>
      <div class="card p-8 bg-darkmbg flex items-center flex-col w-full sm:w-1/4 sm:w-1/3 md:w-1/4">
        <p class="number font-extrabold text-darkfg text-6xl">1</p> 
        <p class="number font-light text-darkfg text-2xl">Winner</p> 
      </div>
    </div>  
  </div>
</Layout>
<style>
  .header {
    clip-path: polygon(0 0, 100% 0%, 100% 91%, 0% 100%);
    z-index: -1;
    background: linear-gradient(to top right, #08090b77, #08090baa) ,url('/header.jpg');
    background-size: cover;
    height: 95vh;
  }

</style>
