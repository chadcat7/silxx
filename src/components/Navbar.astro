<div class="fixed navbar h-screen w-[100%]  z-[1100000]">
  <ul class="navbar-list hidden text-center uppercase   z-[110000]  transition-all fixed z-[1000] flex flex-col gap-5 justify-center md:justify-center leading-0 items-center">
    <li><a href="#" class="navbar-link  font-extrabold  text-[3rem] md:text-[4rem] lg:text-[5rem]">Home</a></li>
    <li><a href="#" class="navbar-link font-extrabold  text-[3rem] md:text-[4rem] lg:text-[5rem]">Events</a></li>
    <li><a href="#" class="navbar-link font-extrabold  text-[3rem] md:text-[4rem] lg:text-[5rem]">Team</a></li>
    <li><a href="#" class="navbar-link font-extrabold  text-[3rem] md:text-[4rem] lg:text-[5rem]">Register</a></li>
    <li><a href="#" class="navbar-link font-extrabold  text-[3rem] md:text-[4rem] lg:text-[5rem]">Discord</a></li>
  </ul>
  <div class="navtoggle h-16 w-16 rounded-full absolute sm:top-[2rem] top-[2rem] right-[2rem] sm:right-[6rem]  shadow-xl z-[1000] bg-darkfg flex flex-col gap-2 justify-center items-center">
    <div class="line h-[3px] rounded-xl w-6 bg-darkbg"></div>
    <div class="line h-[3px] rounded-xl w-4 bg-darkbg"></div>
  </div>
  <div class="navexpand h-12 w-12 rounded-full absolute sm:top-[2.3rem] top-[2.2rem] right-[2.2rem] sm:right-[6.3rem] transition-all z-[999] bg-darksec flex justify-center items-center"></div>
</div>
<script>
  const navToggler = document.querySelector('.navtoggle');
  const navExpander = document.querySelector('.navexpand');
  const navList = document.querySelector('.navbar-list');
  navToggler.addEventListener('click', () => {
    navExpander.classList.toggle('scale-[11000%]')
    navList.classList.toggle('hidden')
  })
</script>

<style>
  .navbar-link {
    color: transparent;
    text-align: center;
    display: inline-block;
    -webkit-text-stroke: 1.5px #dcdee6;
    transition: 0.1s;
    margin: -1.4rem 0;
  }
  @media only screen and (max-width: 960px) {
  .navbar-link {
    -webkit-text-stroke: 1px #dcdee6;
    margin: 0rem 0;
  }
}
  .navbar-link:hover {
    color: #dcdee6;
  }

  .navbar-list {
    transform: translateX(0vw);
        -webkit-transition-duration: 0.8s;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%)
  }
  .hidden {
    transform: translateX(-10vw);
  }
</style>
