<div id="circle" class="fixed hidden sm:block">
<style>
 #circle {
  background-color: white;
  border-radius: 50%;
  height: 50px;
  width: 50px;
  left: -25px;
  top: -25px;
  pointer-events: none;
  z-index:1000000000000000;
  position: fixed;
  mix-blend-mode: difference;
}
</style>
<script>
  const cursor = document.getElementById("circle");

  document.onmousemove = function(e) {
    const mouseY = e.clientY;
    const mouseX = e.clientX;
    const interactable = e.target.closest(".makebig")
    let interacting = interactable !== null;
    let keyframes = {}
    if (interacting) {
      keyframes = {
        transform:  `translate3d(${mouseX}px, ${mouseY}px, 0) scale(1.5)`
      }
    } else {
      keyframes = {
      transform:  `translate3d(${mouseX}px, ${mouseY}px, 0)`
      } 
    }
  cursor.animate(keyframes, {
    duration: 50,
    fill: "forwards"
  });


}
</script>
